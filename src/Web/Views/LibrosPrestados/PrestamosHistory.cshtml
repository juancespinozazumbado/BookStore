@model Biblioteca.Web.Models.modelViews.PrestamoViewModel
@{
    ViewData["Title"] = "PrestamosHistory";
}

<h1>Historial de prestamos </h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row bg-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Estado)
        </dd>
    </dl>
</div>
<h4>Prestamos</h4>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prestamo.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamo.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prestamo.FechaDeDevolucion)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Libro.Prestamos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeDevolucion)

            </tr>
        }
    </tbody>
</table>

